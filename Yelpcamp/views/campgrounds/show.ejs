<% include ../partials/header %>

<div class = "container">
    
    <div class = "row">
        <div class = "col-md-3">
            <p class = "lead">YelpCamp</p>
            <div class = "list-group">
                <li class = "list-group-item active">Info 1</li>
                <li class = "list-group-item">Info 2</li>
                <li class = "list-group-item">Info 3</li>
            </div>
        </div>
        <div class = "col-md-9">
            <div class = "thumbnail">
                <img class = "img-responsive" src = "<%= campgrounds.image %>">
                <div class = "caption-full">
                    <h4 class = "pull-right">9.00/night</h4>
                    <h4><a><%= campgrounds.name %></a></h4>
                    <p><%= campgrounds.description %></p>
                    <p><em>Submitted by: </em><%= campgrounds.author.username %></p>
                    
                     <% if(currentUser && campgrounds.author.id.equals(currentUser._id)){ %>
                     
                        <a href = "/campgrounds/<%= campgrounds._id %>/edit" class = "btn btn-warning">Edit Campground</a>
                        <form id = "delete-form" action = "/campgrounds/<%=campgrounds._id%>?_method=DELETE" method = "POST">
                            <button class = "btn btn-danger">Delete Campground</button>
                        </form>
                        
                    <% } %>
                    
                    <div class ="well">
                        <div class = "text-right">
                            <p><a href = "/campgrounds/<%= campgrounds._id %>/comments/new" class = "btn btn-success">New Comment</a></p>
                        </div>
                        <% campgrounds.comments.forEach(function(comment){ %>
                             <div class = "row">
                                <div class = "col-md-12">
                                    <p><strong><%= comment.author.username %></strong>
                                    <span class = "pull-right">10 days ago</span>
                                     <p><%= comment.text %></p>
                                     
                                     <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                     
                                         <a class = "btn btn-xs btn-warning" href = "/campgrounds/<%= campgrounds._id %>/comments/<%= comment._id %>/edit">Edit</a>
                                         <form id = "delete-form" action = "/campgrounds/<%=campgrounds._id%>/comments/<%= comment._id %>?_method=DELETE" method = "POST">
                                                <button class = "btn btn-xs btn-danger">Delete Comment</button>
                                         </form>
                                     
                                     <% } %>
                    
                                </div>
                            </div>
                        <% }); %>
                            
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>

 <% include ../partials/footer %>









